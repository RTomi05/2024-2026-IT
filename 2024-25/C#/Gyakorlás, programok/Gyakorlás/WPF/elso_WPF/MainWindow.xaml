<Window x:Class="elso_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:elso_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="894">
    <Grid Margin="0,0,50,0">
        <TextBox x:Name="nev" HorizontalAlignment="Center" Margin="0,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="181" FontSize="50" Height="76" TextChanged="TextBox_TextChanged_1"/>
        <TextBox x:Name="jelszo" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="180" FontSize="50" TextChanged="TextBox_TextChanged" Height="75"/>
        <Button Content="Belépés&#xD;&#xA;" HorizontalAlignment="Center" Margin="0,300,0,0" VerticalAlignment="Top" Height="89" Width="248" FontSize="60" Click="Button_Click"/>
        <Label Content="Név&#xD;&#xA;" HorizontalAlignment="Left" Margin="59,66,0,0" VerticalAlignment="Top" FontSize="50" Height="84"/>
        <Label Content="Jelszó" HorizontalAlignment="Left" Margin="59,0,0,0" VerticalAlignment="Center" FontSize="50"/>
        <ListBox x:Name="listBox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="598,82,78,175" FontSize="20"/>

    </Grid>
</Window>
